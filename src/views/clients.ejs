<%- layout('layouts/main') %>
<div class="container col-10">
    <%for (let b in clients) {%>
		<table class="table table-hover" >
			<thead class="thead-dark">
				<tr>
					<th scope="col">Rut</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col" width="200px">Dirección</th>
                    <th scope="col">Acción</th> 
				</tr>
			</thead>
			<tbody class="">
				<tr>
					<form action="/clients/edit/:<%= clients[b]._id %>" method="GET">	
				<tr>
                    <td><%= clients[b]._id %></td>
                    <td><%= clients[b].name %></td>
                    <td><%= clients[b].lastname %></td>
                    <td><%= clients[b].address %></td>
                    <td>
                        
                          <button type="submit" class="btn btn-success btn-sm">Editar</button>
                        </form> 
                    </td>
				</tr>
						
			</tbody>	
        </table>
        <br>
    <% } %>    
</div>